<?xml version="1.0"?>
<launch>
  <include file="$(find freenect_launch)/launch/freenect.launch">
    <arg name="depth_registration" value="true" />
  </include>

  <node pkg="my_robot_pkg" type="depth_median_filter.py" name="depth_median_filter" output="screen" respawn="true">
      <remap from="~in_topic"  to="/camera/depth_registered/image_raw"/>
      <remap from="~out_topic" to="/camera/depth_registered/image_filtered"/>
      <param name="buffer_size" value="3"/> </node>

  <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan" output="screen" respawn="true">
    <remap from="image"       to="/camera/depth_registered/image_filtered"/>
    <remap from="camera_info" to="/camera/depth_registered/camera_info"/>
    <remap from="scan"        to="/kinect_scan"/> <param name="scan_height"     type="int"    value="10"/>
    <param name="scan_time"       type="double" value="0.033"/>
    <param name="range_min"       type="double" value="0.45"/> <param name="range_max"       type="double" value="4.5"/> <param name="output_frame_id" type="str"    value="camera_depth_frame"/>
    <param name="use_inf"         type="bool"   value="true"/>
    <param name="inf_epsilon"     type="double" value="1.0"/>
  </node>

  <arg name="model" default="$(find autonomus_mobile_robot)/urdf/mobile_robot.urdf.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find autonomus_mobile_robot)/config/amcl_nav.rviz"/>

  <node pkg="tf" type="static_transform_publisher" name="camera_tf"
        args="0 0 0.83 0 0 0 base_link camera_link 100" />
  <node pkg="tf" type="static_transform_publisher" name="depth_tf"
        args="0 0 0 0 0 0 camera_link camera_depth_frame 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_footprint_tf"
        args="0 0 0.09 0 0 0 base_footprint base_link 100" /> <node pkg="nodelet" type="nodelet" name="rgbd_sync" args="standalone rtabmap_sync/rgbd_sync" output="screen" respawn="true">
    <remap from="rgb/image"       to="/camera/rgb/image_rect_color"/>
    <remap from="depth/image"     to="/camera/depth_registered/image_raw"/>
    <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>
    <remap from="rgbd_image"      to="rgbd_image"/>
    <param name="approx_sync" value="true"/>
    <param name="approx_sync_max_interval" value="0.1"/>
    <param name="queue_size" value="100"/>
  </node>

  <node pkg="rtabmap_odom" type="rgbd_odometry" name="rgbd_odometry" output="screen" respawn="true">
    <param name="subscribe_rgbd" type="bool" value="true"/>
    <param name="frame_id" type="string" value="base_link"/>
    <remap from="rgbd_image" to="rgbd_image"/>
    <remap from="odom" to="/vo_raw"/> <param name="publish_tf" type="bool" value="false"/> <param name="Reg/Strategy" value="0"/> <param name="max_depth" value="4.0"/> </node>

  <node pkg="my_robot_pkg" type="vo_filter.py" name="vo_filter" output="screen" respawn="true">
    <remap from="~vo_in" to="/vo_raw"/>
    <remap from="~vo_out" to="/vo_filtered"/> <param name="max_age" value="0.5"/> </node>

  <node pkg="my_robot_pkg" type="ekf_odom_pub" name="ekf_odom_pub"/>
  <node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen" respawn="true">
    <param name="port" value="/dev/ttyUSB0"/> <param name="baud" value="115200"/>
  </node>

  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" output="screen" respawn="true">
    <param name="output_frame" value="odom"/>
    <param name="base_footprint_frame" value="base_footprint"/>
    <param name="freq" value="30.0"/>
    <param name="sensor_timeout" value="1.5"/> <param name="odom_used" value="true"/>
    <param name="imu_used" value="false"/> <param name="vo_used" value="true"/>
    <param name="debug" value="false"/>
    <param name="self_diagnose" value="false"/>
    <remap from="odom" to="/odom_data_quat" /> <remap from="vo"   to="/vo_filtered" />   </node>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" respawn="true">
    <remap from="scan" to="/kinect_scan" /> <param name="odom_frame" value="odom" /> <param name="base_frame" value="base_link" />
    <param name="map_frame"  value="map"/>

    <param name="map_update_interval" value="1.5"/>
    <param name="maxUrange" value="4.0"/> <param name="sigma" value="0.05"/>
    <param name="kernelSize" value="1"/>
    <param name="lstep" value="0.05"/>
    <param name="astep" value="0.05"/>
    <param name="iterations" value="5"/>
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="3.0"/>
    <param name="lskip" value="0"/>
    <param name="minimumScore" value="100"/> <param name="srr" value="0.2"/> <param name="srt" value="0.3"/> <param name="str" value="0.2"/> <param name="stt" value="0.3"/> <param name="linearUpdate" value="0.2"/> <param name="angularUpdate" value="0.17"/> <param name="temporalUpdate" value="0.5"/> <param name="resampleThreshold" value="0.5"/>
    <param name="particles" value="80"/> <param name="xmin" value="-30.0"/>
    <param name="ymin" value="-30.0"/>
    <param name="xmax" value="30.0"/>
    <param name="ymax" value="30.0"/>
    <param name="delta" value="0.05"/> <param name="llsamplerange" value="0.01"/>
    <param name="llsamplestep" value="0.01"/>
    <param name="lasamplerange" value="0.005"/>
    <param name="lasamplestep" value="0.005"/>
    <param name="maxRange" value="4.5"/>
    <param name="maxMatchScore" value="0.2"/>
    <param name="map_match_threshold" value="0.3"/>
    <param name="max_correction_delta" value="0.2"/>
    <param name="max_correction_delta_deg" value="11.46"/>
  </node>

  <node pkg="my_robot_pkg" type="rviz_click_to_2d" name="rviz_click_to_2d"/>

</launch>
