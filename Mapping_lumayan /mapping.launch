<?xml version="1.0"?>
<launch>
  <!-- =============================== -->
  <!--      SENSOR INPUT (KINECT)      -->
  <!-- =============================== -->
  <include file="$(find freenect_launch)/launch/freenect.launch">
    <arg name="depth_registration" value="true" />
  </include>

  <!-- Depthimage â†’ LaserScan (tambah stabilitas dan toleransi cahaya) -->
  <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan" output="screen" respawn="true">
    <remap from="image"       to="/camera/depth_registered/image_raw"/>
    <remap from="camera_info" to="/camera/depth_registered/camera_info"/>
    <remap from="scan"        to="/scan"/>
    <param name="scan_height"     type="int"    value="5"/>      <!-- Ambil lebih banyak baris agar noise lebih rata -->
    <param name="scan_time"       type="double" value="0.033"/>  <!-- 30 FPS -->
    <param name="range_min"       type="double" value="0.25"/>   <!-- Lebih dekat untuk hindari blank di tembok -->
    <param name="range_max"       type="double" value="4.8"/>    <!-- Sedikit naik agar tangkap fitur jauh -->
    <param name="output_frame_id" type="str"    value="camera_depth_frame"/>
    <param name="use_inf"         type="bool"   value="true"/>
    <param name="inf_epsilon"     type="double" value="1.0"/>
  </node>

  <!-- =============================== -->
  <!--       ROBOT DESCRIPTION         -->
  <!-- =============================== -->
  <arg name="model" default="$(find autonomus_mobile_robot)/urdf/mobile_robot.urdf.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find autonomus_mobile_robot)/config/amcl_nav.rviz"/>

  <node pkg="tf" type="static_transform_publisher" name="camera_optical"
        args="0 0 0.83 0 0 0 base_link camera_link 100" />

  <!-- =============================== -->
  <!--         VISUAL ODOMETRY         -->
  <!-- =============================== -->
  <group ns="rtabmap">
    <node pkg="nodelet" type="nodelet" name="rgbd_sync" args="standalone rtabmap_sync/rgbd_sync" output="screen" respawn="true">
      <remap from="rgb/image"        to="/camera/rgb/image_rect_color"/>
      <remap from="depth/image"      to="/camera/depth_registered/image_raw"/>
      <remap from="rgb/camera_info"  to="/camera/rgb/camera_info"/>
      <remap from="rgbd_image"       to="rgbd_image"/>
      <param name="approx_sync" value="true"/>
      <param name="approx_sync_max_interval" value="0.1"/> <!-- toleransi sinkron lebih besar -->
    </node>

    <node pkg="rtabmap_odom" type="rgbd_odometry" name="rgbd_odometry" output="screen" respawn="true">
      <param name="subscribe_rgbd" type="bool" value="true"/>
      <param name="frame_id" type="string" value="base_link"/>
      <param name="max_depth" type="double" value="4.0"/>
      <param name="icp_odometry" type="bool" value="true"/> <!-- aktifkan koreksi geometris -->
      <remap from="rgbd_image" to="rgbd_image"/>
      <remap from="odom" to="/vo"/>
    </node>
  </group>

  <!-- =============================== -->
  <!--          ODOMETRY FUSION        -->
  <!-- =============================== -->
  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" output="screen" respawn="true">
    <param name="output_frame" value="odom"/>
    <param name="base_footprint_frame" value="base_footprint"/>
    <param name="freq" value="30.0"/>
    <param name="sensor_timeout" value="1.0"/>
    <param name="odom_used" value="true"/>
    <param name="imu_used" value="true"/>
    <param name="vo_used" value="true"/>
    <param name="debug" value="false"/>
    <param name="self_diagnose" value="false"/>
    <remap from="odom" to="/odom_data_quat"/>
    <remap from="vo" to="/vo_filtered"/>
    <remap from="imu_data" to="/imu/data_filtered"/>
  </node>

  <!-- =============================== -->
  <!--             SERIAL              -->
  <!-- =============================== -->
  <node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen" respawn="true">
    <param name="port" value="/dev/ttyUSB1"/>
    <param name="baud" value="115200"/>
  </node>

  <!-- =============================== -->
  <!--             GMAPPING            -->
  <!-- =============================== -->
  <node pkg="gmapping" type="slam_gmapping" name="gmapping" output="screen" respawn="true">
    <param name="base_frame" value="/base_link"/>
    <param name="odom_frame" value="/odom"/>
    <param name="map_frame"  value="/map"/>
    <rosparam command="load" file="$(find autonomus_mobile_robot)/config/gmapping_params.yaml" />
  </node>

  <!-- =============================== -->
  <!--          CUSTOM NODES           -->
  <!-- =============================== -->
  <node pkg="my_robot_pkg" type="rviz_click_to_2d" name="rviz_click_to_2d"/>
  <node pkg="my_robot_pkg" type="ekf_odom_pub" name="ekf_odom_pub"/>
  <node pkg="my_robot_pkg" type="vo_filter.py" name="vo_filter" output="screen" respawn="true">
    <param name="max_age" value="0.5"/>
  </node>

  <node pkg="my_robot_pkg" type="watchdog_recover.py" name="watchdog_recovery" output="screen" respawn="true"/>
    <node pkg="my_robot_pkg" type="odom_bias_correction.py" name="odom_bias_correction" output="screen" respawn="true"/> 
     <node pkg="my_robot_pkg" type="depth_median_filter.py" name="depth_median_filter" output="screen" respawn="true"/>
  <node pkg="my_robot_pkg" type="mapping_autoresume.py" name="mapping_autoresume" output="screen" respawn="true">
    <param name="freeze_secs" value="10.0"/>
    <param name="resume_secs" value="15.0"/>
  </node>

</launch>
