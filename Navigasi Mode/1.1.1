# =======================================================================================
# PENGEMBANGAN FINAL DWA LOCAL PLANNER
# DENGAN STRUKTUR NAMESPACE YANG BENAR
# =======================================================================================

# PERBAIKAN UTAMA: Menambahkan "DWAPlannerROS:" di bagian paling atas.
# Ini memastikan semua parameter di bawahnya dikirim langsung ke meja DWA Planner.
DWAPlannerROS:

  # Goal Tolerance Parameters
  # Memberikan toleransi agar robot tidak perlu 100% presisi.

  # Toleransi Posisi (X dan Y) dalam meter.
  # Ini adalah "lingkaran" dengan radius 0.2 meter.
  xy_goal_tolerance: 0.2

  # Toleransi Sudut (Yaw) dalam radian (0.17 rad â‰ˆ 10 derajat).
  yaw_goal_tolerance: 0.17

  # Pastikan robot berhenti begitu toleransi tercapai.
  latch_xy_goal_tolerance: false

  # =======================================================================================
  # Parameter lain dipertahankan untuk performa yang stabil
  # =======================================================================================

  # Robot Configuration Parameters
  max_vel_x: 0.4
  min_vel_x: 0.1
  max_vel_y: 0.0
  min_vel_y: 0.0

  max_trans_vel: 0.4
  min_trans_vel: 0.1

  max_rot_vel: 1.0
  min_rot_vel: 0.2

  acc_lim_x: 2.5
  acc_lim_y: 0.0
  acc_lim_theta: 3.2

  # Forward Simulation Parameters
  sim_time: 2.0
  vx_samples: 20
  vy_samples: 0
  vtheta_samples: 40

  # Trajectory Scoring Parameters
  path_distance_bias: 32.0
  goal_distance_bias: 24.0
  occdist_scale: 0.02
  forward_point_distance: 0.325
  stop_time_buffer: 0.2
  scaling_speed: 0.25
  max_scaling_factor: 0.2

  # Oscillation Prevention Parameters
  oscillation_reset_dist: 0.05
