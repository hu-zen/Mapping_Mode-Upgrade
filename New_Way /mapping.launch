<?xml version="1.0"?>
<launch>
  <!-- ================== SENSOR DEPTH ================== -->
  <include file="$(find freenect_launch)/launch/freenect.launch">
    <arg name="depth_registration" value="true" />
  </include>

  <!-- Depth Image â†’ LaserScan -->
  <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan" output="screen">
    <remap from="image" to="/camera/depth_registered/image_raw"/>
    <remap from="camera_info" to="/camera/depth_registered/camera_info"/>
    <remap from="scan" to="/scan"/>
    <!-- Range dan filter untuk mencegah error di jarak dekat -->
    <param name="range_min" type="double" value="0.5"/>
    <param name="range_max" type="double" value="6.0"/>
    <param name="scan_height" type="int" value="20"/>
    <param name="output_frame_id" type="string" value="camera_depth_frame"/>
  </node>

  <!-- Filter laser untuk menghapus NaN -->
  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="scan_filter" output="screen">
    <rosparam command="load" file="$(find autonomus_mobile_robot)/config/scan_filter.yaml"/>
    <remap from="scan" to="/scan"/>
    <remap from="scan_filtered" to="/scan_filtered"/>
  </node>

  <!-- ================== ROS SERIAL (Arduino) ================== -->
  <node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen">
    <param name="port" value="/dev/ttyUSB1"/>
    <param name="baud" value="115200"/>
  </node>

  <!-- ================== MODEL ROBOT ================== -->
  <arg name="model" default="$(find autonomus_mobile_robot)/urdf/mobile_robot.urdf.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" /> 

  <!-- ================== RVIZ ================== -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find autonomus_mobile_robot)/config/amcl_nav.rviz"/>

  <!-- Static transform Kinect -->
  <node pkg="tf" type="static_transform_publisher" name="camera_optical"
        args="0 0 0.83 0 0 0 base_link camera_link 100" />

  <!-- ================== SENSOR FUSION ================== -->
  <!-- IMU Filter -->
  <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter" output="screen">
    <param name="use_mag" value="false"/>
    <param name="publish_tf" value="false"/>
    <remap from="/imu/data_raw" to="/imu/data"/>
    <remap from="/imu/data" to="/imu/data_filtered"/>
  </node>

  <!-- EKF Fusion (rekomendasi: robot_localization) -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_filter_node" output="screen">
    <rosparam command="load" file="$(find autonomus_mobile_robot)/config/ekf_params.yaml"/>
  </node>

  <!-- ================== VISUAL ODOMETRY ================== -->
  <group ns="rtabmap">
    <node pkg="nodelet" type="nodelet" name="rgbd_sync" args="standalone rtabmap_sync/rgbd_sync" output="screen">
      <remap from="rgb/image" to="/camera/rgb/image_rect_color"/>
      <remap from="depth/image" to="/camera/depth_registered/image_raw"/>
      <remap from="rgb/camera_info" to="/camera/rgb/camera_info"/>
      <remap from="rgbd_image" to="rgbd_image"/>
      <param name="approx_sync" value="true"/>
    </node>

    <node pkg="rtabmap_odom" type="rgbd_odometry" name="rgbd_odometry" output="screen">
      <param name="subscribe_rgbd" type="bool" value="true"/>
      <param name="frame_id" type="string" value="base_link"/>
      <param name="max_depth" type="double" value="5.0"/> <!-- Batasi noise jauh -->
      <remap from="rgbd_image" to="rgbd_image"/>
      <remap from="odom" to="/vo"/>
    </node>
  </group>

  <!-- ================== SLAM (GMapping) ================== -->
  <node pkg="gmapping" type="slam_gmapping" name="turtlebot3_slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="/map"/>
    <rosparam command="load" file="$(find autonomus_mobile_robot)/config/gmapping_params.yaml" />
    <remap from="scan" to="/scan_filtered"/> <!-- gunakan hasil filter -->
  </node>

</launch>
